@model Cart

<h2>Giỏ hàng của bạn</h2>

@if (Model == null || Model.CartItems.Count == 0)
{
        <p>Giỏ hàng của bạn đang trống.</p>
}
else
{
        <table class="table">
            <thead>
                <tr>
                    <th>Hình ảnh</th>
                    <th>Sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Tổng</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.CartItems)
            {
                        <tr>
                            <td><img src="@item.Product.ImageUrl" width="50" height="50"></td>
                            <td>@item.Product.Name</td>
                            <td>@item.Price.ToString("N0") VND</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Quantity * item.Price) VND</td>
                            <td>
                                <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn btn-danger">Xóa</a>
                                <a asp-action="Checkout" class="btn btn-success">Đặt hàng</a>
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}



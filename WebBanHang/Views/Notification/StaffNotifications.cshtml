@model List<Notification>

<h3>🔔 Thông báo đơn hàng mới</h3>

@if (!Model.Any())
{
        <p>Không có thông báo mới.</p>
}
else
{
        <ul class="list-group">
        @foreach (var noti in Model)
        {
                    <li class="list-group-item">
                @noti.Message
                        <br />
                        <small class="text-muted">@noti.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                    </li>
        }
        </ul>
}
